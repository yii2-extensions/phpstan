{
    "name": "yii2/phpstan",
    "type": "library",
    "description": "PHPStan extension for Yii 2",
    "keywords": [
        "yii2",
        "phpstan"
    ],
    "license": "mit",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "nikic/php-parser": "^4.1.0",
        "phpstan/phpstan": "^1.0",
        "yiisoft/yii2": "^2.2"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^4.6",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^10.2"
    },
    "autoload": {
        "psr-4": {
            "yii\\phpstan\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "yii\\phpstan\\tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    },
    "scripts": {
        "check-dependencies": "composer-require-checker",
        "phpstan": "phpstan",
        "test": "phpunit"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
